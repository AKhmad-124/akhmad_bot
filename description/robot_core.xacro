<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="inertial_macros.xacro" />


    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0" />
    </material>

    <material name="red">
        <color rgba="1.0 0.2 0.2 1.0" />
    </material>
    <material name="black">
        <color rgba="0 0 0 0" />
    </material>
    <material name="light_blue">
        <color rgba="0.5 0.5 0.8 1.0" />
    </material>

    <!-- base link -->
    <link name="base_link">

    </link>
    <!-- chassis link -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.1 0.0 0.0" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.3 0.0 0.1" />

            <geometry>
                <box size="0.6 0.3 0.2" />
            </geometry>
            <material name="light_blue" />
        </visual>
        <collision>
            <origin xyz="0.3 0.0 0.1" />

            <geometry>
                <box size="0.6 0.3 0.2" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.6" y="0.3" z="0.2">
            <origin xyz="0.3 0.0 0.1" rpy="0 0 0" />
        </xacro:inertial_box>
 
    </link>
               <gazebo reference = 'chassis'>
                <material>Gazebo/SkyBlue </material>
            </gazebo>
    <!-- left wheel link -->
    <joint name="left_back_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_back_wheel" />
        <origin xyz="0.0 0.175 0.0" rpy="-${pi/2} 0 0" />
        <axis xyz="0.0 0.0 1.0" />
    </joint>

    <link name="left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
                <material name="black" />
            </geometry>
        </visual>
        <collision>

            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </xacro:inertial_cylinder>

    </link>
             <gazebo reference = 'left_back_wheel'>
                <material>Gazebo/Black</material>
            </gazebo>

    <!-- right wheel link -->
    <joint name="right_back_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_back_wheel" />
        <origin xyz="0.0 -0.175 0.0" rpy="${pi/2} 0 0" />
        <axis xyz="0.0 0.0 -1.0" />

    </joint>

    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
                <material name="black" />
            </geometry>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </xacro:inertial_cylinder>
    </link>
                 <gazebo reference = 'right_back_wheel'>
                <material>Gazebo/Black</material>
            </gazebo>

    <!-- right front wheel link -->
    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_front_wheel" />
        <origin xyz="0.4 -0.175 0.0" rpy="${pi/2} 0 0" />
        <axis xyz="0.0 0.0 -1.0" />

    </joint>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
                <material name="black" />
            </geometry>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </xacro:inertial_cylinder>
    </link>
                     <gazebo reference = 'right_front_wheel'>
                <material>Gazebo/Black</material>
            </gazebo>

    <!-- left wheel link -->
    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_front_wheel" />
        <origin xyz="0.4 0.175 0.0" rpy="-${pi/2} 0 0" />
        <axis xyz="0.0 0.0 1.0" />
    </joint>

    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
                <material name="black" />
            </geometry>

        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04" />
            </geometry>

        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </xacro:inertial_cylinder>

    </link>
                         <gazebo reference = 'left_front_wheel'>
                <material>Gazebo/Black</material>
            </gazebo>


</robot>